{
  "$schema": "http://json.schemastore.org/template",
  "author": "HavenDV",
  "classifications": [ "Linux" ],
  "identity": "Linux.LinuxApp",
  "name": "Linux .NET Application",
  "description": "A project for creating an Linux .NET application",
  "shortName": "linux",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "LinuxApp1",
  "preferNameDirectory": true,
  "primaryOutputs": [
    { "path": "LinuxApp1.csproj" }
  ],
  "symbols": {
    "packageName": {
      "type": "parameter",
      "description": "Overrides the package name in the linux-manifest.xml",
      "datatype": "string",
      "replaces": "com.companyname.LinuxApp1"
    }
  },
  "defaultName": "LinuxApp1"
}